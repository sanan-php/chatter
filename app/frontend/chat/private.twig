<html>
<head>
    {% include '@app/blocks/header.twig' %}
    <script src="/static/js/jQuery.base64.js"></script>
    <script src="/static/js/chat.js"></script>
</head>
<body>
<div class="header-menu">
    <span class="left">
        <a href="{{ links.allUsers }}">
            <img src="/static/img/chatNow.png" width="25" height="25" align="absmiddle">
            {{ labels.allUsers }}
        </a>
    </span>
    {% include '@app/blocks/search.twig' with {"userSearch": labels.userSearch } %}
    <span class="right">
        <a href="{{ links.profile }}">
            {% include '@app/blocks/userPic.twig' with {"user": user, "size": 30 } %}
            {{ user.getName() }} {{ labels.profile }}
        </a>
        <a href="{{ links.logout }}">
            <img src="/static/img/logout.png" width="20" height="20" align="absmiddle">
            {{ labels.exit }}
        </a>
    </span>
</div>
<div id="wrapper-chat">
    <div id="chat-container">
        <div id="privates-container">
            <div id="current-dialogue">
                <div id="contact-data">
                {% include '@app/blocks/userPic.twig' with {"user": currentContact, "size": 60 } %} &nbsp;&nbsp;&nbsp;
                {{ currentContact.getName() }}
                </div>
                <div id="line"></div>
            </div>
            <div id="users-list"></div>
        </div>
        <div id="dialogue">
            <div id="messages">
                <div id="older"></div>
                <div id="new-loaded"></div>
            </div>
            <div id="write-form">
                <input type="hidden" class="emptyText" value="{{ labels.emptyText }}">
                <form action="{{ links.newMessageCreate }}" enctype="application/x-www-form-urlencoded" method="post" id="message-form">
                    <div id="write-input">
                        <textarea id="new-message" title="{{ labels.emptyText }}" name="message"></textarea>
                    </div>
                    <input type="hidden" id="chat-with" value={{ with }}>
                    <input type="hidden" id="current-user" value={{  user.getId() }}>
                    <input type="hidden" id="rand" value="{{ rand }}">
                    <input type="submit" value="Отправить" id="send-message-submit">
                </form>
            </div>
        </div>
    </div>
</div>
</body>
</html>